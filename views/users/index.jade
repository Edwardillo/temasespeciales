extends ../layout

block content
    h1.
         #{title}
    ul
      each user in users
            li
                = user.name
                = " "
                = user.message
                = " "
                = user.counter
                form(action='/users/#{user._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit').
                        Delete
                p
                    a(href='/users/#{user._id}/edit') AddMessage
                    a(href='/users/#{user._id}')  Show
